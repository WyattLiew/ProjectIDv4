<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_margin="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
             <TextView
                 android:paddingLeft="6dp"
                 android:id="@+id/lg_projTitle_textView"
                 style="@style/projectHeaderTextStyle"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="2"
                 android:textStyle="bold"
                 android:textAllCaps="true"
                 android:textSize="16sp"
                 android:text="Project title"/>
            <TextView
                android:id="@+id/lg_projDate_textView"
                android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="@color/colorText"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lg_projConName_textView"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Client"
            style="@style/projectTextStyle"/>
        <TextView
            android:id="@+id/lg_projNumber_textView"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Number"
            style="@style/projectTextStyle"/>
    </LinearLayout>

        <TextView
            android:id="@+id/lg_projLocation_textView"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Location"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TableRow>
                <TextView
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description : "/>
                <TextView
                    android:id="@+id/lg_projDescription_textView"
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Description"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">
            <TableRow>
                <TextView
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes : "/>

                <TextView
                android:id="@+id/lg_projNotes_textView"
                android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Notes"/>
            </TableRow>
        </TableLayout>

</LinearLayout>

</android.support.v7.widget.CardView>